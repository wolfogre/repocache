[base]
name=CentOS-$releasever - Base
failovermethod=priority
baseurl=http://{{ .Hostname }}/centos/$releasever/os/$basearch/
gpgcheck=1
gpgkey=http://{{ .Hostname }}/centos/RPM-GPG-KEY-CentOS-7

#released updates
[updates]
name=CentOS-$releasever - Updates
failovermethod=priority
baseurl=http://{{ .Hostname }}/centos/$releasever/updates/$basearch/
gpgcheck=1
gpgkey=http://{{ .Hostname }}/centos/RPM-GPG-KEY-CentOS-7

#additional packages that may be useful
[extras]
name=CentOS-$releasever - Extras
failovermethod=priority
baseurl=http://{{ .Hostname }}/centos/$releasever/extras/$basearch/
gpgcheck=1
gpgkey=http://{{ .Hostname }}/centos/RPM-GPG-KEY-CentOS-7

#additional packages that extend functionality of existing packages
[centosplus]
name=CentOS-$releasever - Plus
failovermethod=priority
baseurl=http://{{ .Hostname }}/centos/$releasever/centosplus/$basearch/
gpgcheck=1
enabled=0
gpgkey=http://{{ .Hostname }}/centos/RPM-GPG-KEY-CentOS-7

#contrib - packages by Centos Users
[contrib]
name=CentOS-$releasever - Contrib
failovermethod=priority
baseurl=http://{{ .Hostname }}/centos/$releasever/contrib/$basearch/
gpgcheck=1
enabled=0
gpgkey=http://{{ .Hostname }}/centos/RPM-GPG-KEY-CentOS-7
